
<form class="form-container" action="/users/login" method="post">
<% if @errors%>
	<h3 style="color: red;"><%= @errors %></h3>
<%end%>
<div class="form-title"><h2>Login</h2></div>
<div class="form-title">Username</div>
<input class="form-field" type="text" name="user[username]" placeholder="Username" required /><br />
<div class="form-title">Password</div>
<input class="form-field" pattern=".{6,}" required title="Minimum 6 characters required" type="password" name="user[password]" placeholder="Password" value="" required /><br />
<div class="submit-container">
<input class="submit-button" type="submit" value="Submit" />
</div>
</form>