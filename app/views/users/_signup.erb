<form class="form-container" action="/users" method="post">
<% if @errors%>
	<h3 style="color: red;"><%= @errors %></h3>
<%end%>
<div class="form-title"><h2>Sign up</h2></div>
<input class="form-field" type="text" name="username" placeholder="Username" required /><br />
<input class="form-field" type="email" name="email" placeholder="Email" required /><br />
<input class="form-field" pattern=".{6,}" required title="Minimum 6 characters required" type="password" name="password" placeholder="Password - min 6 char." required /><br />
<input class="form-field" pattern=".{6,}" required title="Minimum 6 characters required" type="password" name="password_confirm" placeholder="Confirm Password" required /><br />
<div class="submit-container">
<input class="submit-button" type="submit" value="Submit" />
</div>
</form>